{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",

        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",

        "strict": true,
        "noUncheckedIndexedAccess": true
        
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}
